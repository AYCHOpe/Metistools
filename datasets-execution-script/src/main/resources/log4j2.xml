<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5p %C:%L [%t] - %m%n"/>
    </Console>
    <File name="ExecutionLogs" fileName="./datasets-execution/logs/execution-${date:yyyy-MM-dd-HHmmss}.log">
      <MarkerFilter marker="EXECUTION_LOGS" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5p %C:%L [%t] - %m%n" />
    </File>
    <File name="FinalDatasetStatus" fileName="./datasets-execution/logs/final-dataset-status-${date:yyyy-MM-dd-HHmmss}.log">
      <MarkerFilter marker="FINAL_DATASET_STATUS" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5p %C:%L [%t] - %m%n" />
    </File>
    <File name="ProcessedDatasets" fileName="./datasets-execution/logs/processed-datasets.log">
      <MarkerFilter marker="PROCESSED_DATASETS" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="%m%n" />
    </File>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="ExecutionLogs"/>
      <AppenderRef ref="FinalDatasetStatus"/>
      <AppenderRef ref="ProcessedDatasets"/>
    </Root>
  </Loggers>
</Configuration>